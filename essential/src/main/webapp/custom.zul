<?link  rel="stylesheet" type="text/css" href="/style.css"?>
<zk>
	<window hflex="1" vflex="1" apply="org.zkoss.zss.essential.MainCtrl">
		<vlayout hflex="1" vflex="1" spacing="0px">
			<div hflex="1" vflex="min" >
				<include src="/toolbar.zul" spreadsheetId="ss" spreadsheetPath="../ss"/>
			</div>
			<hbox>
			<button label="invalidate" onClick="ss.invalidate()"/>
			<button label="enlarge" onClick="ss.setMaxrows(500);"/>
			</hbox>
			<spreadsheet hflex="1" vflex="1" 
				id="ss"
				showFormulabar="true" showContextMenu="true" showSheetbar="true" showToolbar="true"
				maxrows="100" maxcolumns="40"
				ctrlKeys="^X^C^V^B^I^U#del"
				/>
		</vlayout>
	</window>
</zk>